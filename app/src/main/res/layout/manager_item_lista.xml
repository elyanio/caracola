<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/cardview_light_background"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icon_gestor"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/name_gestor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/icon_gestor"
        android:text="Asiel Hextiandro"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/number_gestor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_gestor"
        android:layout_toRightOf="@+id/icon_gestor"
        android:text="54520426"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/eliminar_manager_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        app:srcCompat="@drawable/ic_clear_black_24dp"
        android:layout_below="@+id/name_gestor"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="addConsumption"
        android:text="@string/add_consumption"/>

    <TextView
        android:id="@+id/consumptionPriceText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Precio: "/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:name="com.polymitasoft.caracola.view.booking.ClientFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.polymitasoft.caracola.view.booking.ClientFragment"
        tools:listitem="@layout/fragment_client"/>
</LinearLayout>